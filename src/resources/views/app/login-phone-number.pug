extends ../layouts/sign

block content
  div#login-phone
    h5 Login with phone number

    form#login-phone-number(method='POST')
      .form-group.input-group-lg
        input#loginPhone.form-control(type='text' name='loginPhone' placeholder='(+84)Phone number' required='' autofocus='')
      .form-group.input-group-lg
        input#loginPassword.form-control(type='password' name='loginPassword' placeholder='password' required='' autofocus='')
        #recaptcha-container
      button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign in
  hr
  p.text-muted Login with your social media account.
  ul.list-inline
    li.list-inline-item#login-facebook
      a.btn.btn-floating.btn-facebook(href='#')
        i.fa.fa-facebook
    li.list-inline-item
      a.btn.btn-floating.btn-twitter(href='#')
        i.fa.fa-twitter
    li.list-inline-item
      a.btn.btn-floating.btn-dribbble(href='#')
        i.fa.fa-dribbble
    li.list-inline-item
      a.btn.btn-floating.btn-linkedin(href='#')
        i.fa.fa-linkedin
    li.list-inline-item#login-google
      a.btn.btn-floating.btn-google(href='#')
        i.fa.fa-google
    li.list-inline-item
      a.btn.btn-floating.btn-behance(href='#')
        i.fa.fa-behance
    li.list-inline-item
      a.btn.btn-floating.btn-instagram(href='#')
        i.fa.fa-instagram
  hr
  p.text-muted Don&apos;t have an account?
  a.btn.btn-outline-light.btn-sm.mr-4(href='/login') Login by email!
  a.btn.btn-outline-light.btn-sm(href='/register') Register now!
